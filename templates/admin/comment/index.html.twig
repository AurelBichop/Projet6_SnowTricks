{% extends 'admin/base.html.twig' %}

{% block title %}Administration des Commentaires{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des Commentaires</h1>
        <table class="table table-hover">
            <thead>
            <th>Id</th>
            <th>Auteur</th>
            <th>trick</th>
            <th>Contenu</th>
            <th>Cr√©ation</th>
            <th>Action</th>
            </thead>

            <tbody>
            {% for comment in pagination.data %}
                <tr>
                    <td>{{comment.id}}</td>
                    <td>
                        {{comment.trick.author.fullName}}
                    </td>
                    <td>{{comment.trick.titre}}</td>
                    <td>{{comment.content}}</td>
                    <td>
                        {{comment.createdAt | date('d/m/Y') }}
                    </td>
                    <td>
                        <a href="{{ path('admin_comments_delete',{'id':comment.id}) }}" class="btn btn-danger" onclick="return confirm('Voulez Vous vraiment supprimer ce commentaire')"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

    {{ pagination.display }}
{% endblock %}
