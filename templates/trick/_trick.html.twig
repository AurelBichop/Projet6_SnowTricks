<div class="row mx-3">
    {% for trick in tricks %}
        <div class="mx-auto my-5">
            <div class="card border-info trick-card">
                <div class="card-header">
                    {% if trick.coverImage == "" %}
                        <img src="{{ asset('imageApp/snowboard.jpg') }}" alt="image par default" class="rounded img-fluid trick-picture">
                    {% else %}
                        <img src="{{ asset('uploads/images/') }}{{ trick.coverImage }}" alt="image du trick {{ trick.titre }}" class="rounded img-fluid trick-picture">
                    {% endif %}
                </div>
                <div class="card-body">

                    <div class="row">

                        {% if app.user and app.user == trick.author %}
                            <div class="col-8">
                        {% else %}
                            <div class="col-12">
                        {% endif %}
                                <a href="{{ path('show_trick',{'slug':trick.slug }) }}"><h4 class="card-title text-center">{{ trick.titre }}</h4></a>
                            </div>

                        {% if app.user and app.user == trick.author %}
                            <div class="col-2">
                                <a href="{{ path('edit_trick',{'slug':trick.slug }) }}"><i class="fas fa-pen"></i></a>
                            </div>
                            <div class="col">
                                <a href="{{ path('delete_trick',{'slug':trick.slug }) }}" onclick="return confirm('Voulez vous vraiment supprimer le Trick : {{ trick.titre }}')"><i class="fas fa-trash"></i></a>
                            </div>
                        {% endif %}

                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>